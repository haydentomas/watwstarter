{
  "name": "tailwindwpstarter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "watch:css": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build:css": "tailwindcss -i ./src/input.css -o ./src/output.css --minify",
    "watch:js": "esbuild js/main.js --bundle --outfile=dist/bundle.js --format=esm --sourcemap --watch",
    "build:js": "esbuild js/main.js --bundle --outfile=dist/bundle.js --format=esm --sourcemap",
    "build:js:min": "esbuild js/main.js --bundle --minify --outfile=dist/bundle.min.js --format=esm",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "build": "npm-run-all build:css build:js:min"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.11"
  }
}
